# =============================================================================
# BRICO PLUS DATABASE POPULATION CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your settings
# All settings are optional except ORACLE_* which are required

# =============================================================================
# DATABASE CONNECTION (REQUIRED)
# =============================================================================
ORACLE_HOST=your.oracle.host
ORACLE_PORT=1521
ORACLE_SERVICE=your_service_name
ORACLE_USER=your_username
ORACLE_PASS=your_password

# =============================================================================
# BASIC GENERATION COUNTS
# =============================================================================
# Number of factories to generate
NOMBRE_USINES=15

# Number of points of sale to generate
NOMBRE_POINTS_VENTE=50

# =============================================================================
# FACTORY EMPLOYEE COUNTS
# =============================================================================
# Employee counts are determined by factory specialization level:

# Specialized factories: Focus on 1 production type
# These are highly specialized facilities with larger workforce
FACTORY_SPECIALIZED_MIN=300
FACTORY_SPECIALIZED_MAX=500

# Semi-specialized factories: Handle 2 production types
# Medium-sized facilities with moderate specialization
FACTORY_SEMI_SPECIALIZED_MIN=200
FACTORY_SEMI_SPECIALIZED_MAX=350

# General factories: Handle 3-4 production types
# Smaller, more versatile facilities
FACTORY_GENERAL_MIN=150
FACTORY_GENERAL_MAX=250

# =============================================================================
# POINT OF SALE EMPLOYEE COUNTS
# =============================================================================
# Brico-Express: Small neighborhood stores
PV_EXPRESS_MIN=8
PV_EXPRESS_MAX=15

# GSB (Grande Surface Bricolage): Large DIY superstores
PV_GSB_MIN=75
PV_GSB_MAX=150

# =============================================================================
# POINT OF SALE TYPE PROBABILITY
# =============================================================================
# Probability that a point of sale is a Brico-Express (vs GSB)
# 0.7 = 70% Brico-Express, 30% GSB
PV_EXPRESS_PROBABILITY=0.7

# =============================================================================
# PRODUCT GENERATION
# =============================================================================
# Number of brand variants per product type
# Each product type (e.g., "Electric Drill") will have multiple variants
# with different brands
PRODUITS_VARIANTS_MIN=2
PRODUITS_VARIANTS_MAX=4

# =============================================================================
# CALENDAR SETTINGS
# =============================================================================
# Date range for calendar generation (YYYY-MM-DD format)
CALENDRIER_DATE_DEBUT=2000-01-01
CALENDRIER_DATE_FIN=2025-10-31

# =============================================================================
# DUAL WORKPLACE EMPLOYEES
# =============================================================================
# Percentage of employees who work at BOTH a factory AND a point of sale
# Set to 0 to disable this feature (all employees work at single location)
# Value range: 0.0 (0%) to 1.0 (100%)
# Recommended: 0.01 (1%) or 0.05 (5%)
#
# Dual workplace employees will have:
# - Work hour records in both TRAVAILLER_USINE and TRAVAILLER_PT_VENTE tables
# - Reduced hours at each location (~60-80 hours instead of 120-160 full-time)
# - Sales records at their assigned point of sale
DUAL_WORKPLACE_PERCENTAGE=0.01

ADRESSE_EMPLOYEES_PRO_IS_NEARBY=false